@model Product


<style>
    .product-header {
        font-size: 2.5em;
        color: #1abc9c;
        margin-bottom: 20px;
    }

    .product-info {
        background-color: #34495e;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .product-info p {
        font-size: 1.2em;
        margin: 15px 0;
    }

    .button-group {
        margin-top: 30px;
    }

    .button-group a {
        background-color: #1abc9c;
        color: white;
        text-decoration: none;
        padding: 12px 25px;
        border-radius: 5px;
        font-size: 1.1em;
        transition: background-color 0.3s;
    }

    .button-group a:hover {
        background-color: #16a085;
    }
</style>



<div class="container">
    <h3 class="product-header">@Model.ProductName</h3>
    <div class="product-info">
        <p><strong>Price:</strong> $@Model.Price</p>
    </div>
    <div class="button-group">
        <a href="/Product">Back to Products</a>
    </div>
</div>
