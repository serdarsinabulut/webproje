@model List<StoreApp.Models.Product>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            background-color: #2c3e50;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .navbar {
            background-color: #1abc9c;
            padding: 1em;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            margin: 0 1em;
        }

        .navbar a:hover {
            color: #ecf0f1;
        }

        .container {
            padding: 2em;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .product-card {
            background-color: #34495e;
            border-radius: 10px;
            padding: 1.5em;
            margin: 1em;
            width: 250px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

        .product-card h3 {
            color: #1abc9c;
            font-size: 1.5em;
        }

        .product-card p {
            color: white;
            font-size: 1.2em;
        }

        .product-card a {
            color: #1abc9c;
            text-decoration: none;
            font-weight: bold;
        }

        .product-card a:hover {
            color: #16a085;
        }

        .product-count {
            font-size: 1.5em;
            color: #1abc9c;
            text-align: center;
            margin-bottom: 1em;
        }

        .add-product-btn {
            background-color: #1abc9c;
            color: white;
            text-decoration: none;
            font-size: 1em;
            padding: 0.8em 1.5em;
            border-radius: 5px;
            display: block;
            margin: 2em auto;
            width: max-content;
        }

        .add-product-btn:hover {
            background-color: #16a085;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a href="/">Home</a>
        <div>Product List</div>
    </div>

    <div class="product-count">
        <p>Total Products: @ViewBag.ProductCount</p>
    </div>

    <!-- Ürün ekleme butonu -->
    <a href="/Product/Create" class="add-product-btn">Add Product</a>

    <div class="container">
        @foreach (var prd in Model)
        {
            <div class="product-card">
                <h3>@prd.ProductName</h3>
                <p>Price: @prd.Price</p>
                <p>
                    <a href="/Product/Get/@prd.ProductID">Get Details</a>
                </p>
            </div>
        }
    </div>
</body>

</html>
