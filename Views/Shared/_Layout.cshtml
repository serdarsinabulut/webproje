<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #2c3e50; /* Koyu motorsiklet teması */
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .navbar {
            background-color: #1abc9c;
            padding: 1em;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            margin: 0 1em;
        }

        .navbar a:hover {
            color: #ecf0f1;
        }
    </style>
    <div class="navbar">
        <a href="/Home/Index">Çıkış</a>
        <a href="/Product/Index">Products</a>
        <!-- Diğer menü linkleri eklenebilir -->
    </div>
</head>
<body>

    <div class="container">
        @RenderBody()  <!-- Burada sayfanın içeriği render edilecek -->
    </div>
</body>
</html>
