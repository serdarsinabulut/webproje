@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    body {
        background-color: #2c3e50; /* Arka plan motorsiklet temasında */
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .navbar {
        background-color: #1abc9c;
        padding: 1em;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        margin: 0 1em;
    }

    .navbar a:hover {
        color: #ecf0f1;
    }

    .welcome {
        text-align: center;
        padding: 2em 0;
    }

    .welcome h1 {
        font-size: 3em;
        color: #1abc9c;
        margin-bottom: 0.5em;
    }

    .welcome p {
        font-size: 1.2em;
        margin-bottom: 1.5em;
    }

    .button-group {
        text-align: center;
    }

    .button-group a {
        background-color: #1abc9c;
        color: white;
        text-decoration: none;
        padding: 0.8em 1.5em;
        border-radius: 5px;
        font-size: 1em;
        margin: 0.5em;
        display: inline-block;
    }

    .button-group a:hover {
        background-color: #16a085;
    }
</style>

<div class="navbar">
    
    
</div>

<div class="welcome">
    <h1>Hoş Geldiniz!</h1>
    <p>MOTOMARKA'ya hoş geldiniz. Motorsiklet dünyasının en iyi ürünleri için hemen keşfe çıkın.</p>
</div>

<div class="button-group">

    <a asp-controller="Home" asp-action="About">Hakkında</a>
    <a asp-controller="Account" asp-action="Register">kayıt ol</a>
    <a asp-controller="Account" asp-action="Login">giriş yap</a>
</div>
