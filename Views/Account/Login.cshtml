
@model LoginViewModel

<style>

    .form-container {
        max-width: 600px;
        margin: auto;
        padding: 2em;
        background-color: #34495e;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    h2 {
        color: #1abc9c;
        text-align: center;
        margin-bottom: 1em;
    }

    .form-group {
        margin-bottom: 1em;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-group .text-danger {
        color: #e74c3c;
        font-size: 0.9em;
    }

    .btn {
        background-color: #1abc9c;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        border: none;
        width: 100%;
        margin-bottom: 1em;
    }

    .btn:hover {
        background-color: #16a085;
    }

    .alert {
        background-color: #e74c3c;
        color: white;
        padding: 10px;
        border-radius: 5px;
    }

    .navbar a, .form-group {
        color: white;
    }

    .register-link {
        text-align: center;
        margin-top: 1em;
    }

    .register-link a {
        background-color: #16a085;
        padding: 10px 20px;
        color: white;
        border-radius: 5px;
        text-decoration: none;
    }

    .register-link a:hover {
        background-color: #1abc9c;
    }
</style>

<div class="form-container">
    <h2>Login</h2>

    

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn">Login</button>
    </form>

    <div class="register-link">
        <a href="/Account/Register" class="btn">Click to register</a>
    </div>
</div>
